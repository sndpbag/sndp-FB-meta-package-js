// ============================================
// packages/pages/package.json
// ============================================
{
  "name": "@sndp/meta-pages",
  "version": "1.0.0",
  "description": "Facebook Pages API client for Meta SDK",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./posts": {
      "import": "./dist/posts/index.mjs",
      "require": "./dist/posts/index.js",
      "types": "./dist/posts/index.d.ts"
    },
    "./comments": {
      "import": "./dist/comments/index.mjs",
      "require": "./dist/comments/index.js",
      "types": "./dist/comments/index.d.ts"
    },
    "./insights": {
      "import": "./dist/insights/index.mjs",
      "require": "./dist/insights/index.js",
      "types": "./dist/insights/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest"
  },
  "dependencies": {
    "@sndp/meta-core": "workspace:*",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "vitest": "^1.0.0"
  }
}
